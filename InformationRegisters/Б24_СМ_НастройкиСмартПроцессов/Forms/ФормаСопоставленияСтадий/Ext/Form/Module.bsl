&НаСервере
Процедура ЗагрузитьНаправленияСПортала()
	
	СтруктураНастроек =  Б24_К_ОбщегоНазначенияВызовСервера.СформироватьСтруктуруНастроек(НастройкаПодключения, Истина);  
	Если СтруктураНастроек = Неопределено Тогда
		Возврат;
	КонецЕсли;
	СтруктураНастроек.Логирование.Измерение1 = "Служебные операции";
	СтруктураНастроек.Логирование.Измерение2 = "Получение списка статусов смарт процессов.";
	
	ТелоHTTPЗапроса = "&entityTypeId=" + ТипВладельцаСмартПроцесса;
	НаправленияСБ24 = Б24_К_RestApiВызовСервера.ОтправкаДанныхНаПортал(СтруктураНастроек, "/rest/crm.category.list", ТелоHTTPЗапроса); 
	Если НаправленияСБ24 = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	result = НаправленияСБ24.Получить("result");
	Если result = Неопределено Тогда
		Возврат;
	КонецЕсли;

	categories = result.Получить("categories");
	Если categories = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	Для каждого ТекНаправление Из categories Цикл
		
		ИдНаправления			= Формат(ТекНаправление.Получить("id"),"ЧГ=0");
		НаименованиеНаправления = ТекНаправление.Получить("name");
		
		НоваяСтрока = Направления.Добавить();
		НоваяСтрока.ИдНаправления 	= ИдНаправления; 
		НоваяСтрока.Направление 	= НаименованиеНаправления; 
		
	КонецЦикла;
	
КонецПроцедуры

&НаКлиенте
Процедура ЗагрузитьСтатусыСПортала(Команда)
	
	НаправленияПриАктивизацииСтроки(Неопределено);
	
	ТекущиеДанные = Элементы.Направления.ТекущиеДанные;
	Если ТекущиеДанные = Неопределено Тогда
		Возврат;
	КонецЕсли;

	ЗагрузитьСтатусыСПорталаСервер(); 
	
	ТекущееНаправление = Элементы.Направления.ТекущиеДанные;
	Если Элементы.Направления.ТекущиеДанные = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	ПредИдНаправления = ТекущееНаправление.ИдНаправления; 
	
	СоответствияСтадий.Очистить();
	Для каждого ТекСтрока Из СоответствияСтадийНаправлений Цикл
		Если ТекСтрока.ИдНаправления = ТекущееНаправление.ИдНаправления Тогда
			НовСтрока = СоответствияСтадий.Добавить();
			ЗаполнитьЗначенияСвойств(НовСтрока, ТекСтрока); 
		КонецЕсли;
	КонецЦикла;
	
КонецПроцедуры
	
&НаСервере
Процедура ЗагрузитьСтатусыСПорталаСервер()
	
	СтруктураНастроек =  Б24_К_ОбщегоНазначенияВызовСервера.СформироватьСтруктуруНастроек(НастройкаПодключения, Истина);  
	Если СтруктураНастроек = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	СтруктураНастроек.Логирование.Измерение1 = "Служебные операции";
	СтруктураНастроек.Логирование.Измерение2 = "Получение списка статусов смарт процессов.";
	
	мТаблицы = Новый Массив;
	мТаблицы.Добавить(СоответствияСтадийНаправлений);
	
	Для Каждого ТекТаблица Из мТаблицы Цикл
		
		тзнАрхив = ТекТаблица.Выгрузить();
		ТекТаблица.Очистить();
		
		Для каждого ТекНаправление Из Направления Цикл
			
			ДопИдНаправления = "DYNAMIC_" + ТипВладельцаСмартПроцесса + "_STAGE_" + ТекНаправление.ИдНаправления;
			ФильтрПоКатегории 	= "filter[CATEGORY_ID]=" + ТекНаправление.ИдНаправления;
			
			ДанныеНаправления = Б24_К_RestApiВызовСервера.ПолучитьМассивСтатусовCRM(СтруктураНастроек, ФильтрПоКатегории); 
			Для Каждого ТекСтатус Из ДанныеНаправления Цикл
			
				ВладелецСтатуса = Формат(ТекСтатус.Получить("ENTITY_ID"),"ЧГ=0");
				НазваниеСтадии	= ТекСтатус.Получить("NAME");
				ИдСтадии = Формат(ТекСтатус.Получить("STATUS_ID"),"ЧГ=0");
				
				Для каждого ТекНаправление Из Направления Цикл
					
					Если ВладелецСтатуса = ДопИдНаправления Тогда
						
						НоваяЗапись = ТекТаблица.Добавить();
						НоваяЗапись.ИдНаправления 		= ТекНаправление.ИдНаправления;
						НоваяЗапись.НазваниеНаправления = ТекНаправление.Направление;
							
						НоваяЗапись.ИдСтадии		= ИдСтадии;
						НоваяЗапись.НазваниеСтадии 	= НазваниеСтадии;
						
						НайденныеСтроки = ТзнАрхив.НайтиСтроки(Новый Структура("ИдНаправления, ИдСтадии", ТекНаправление.ИдНаправления, ИдСтадии)); 
						Если НайденныеСтроки.Количество()>0 Тогда
							НоваяЗапись.Значение1С = НайденныеСтроки[0].Значение1С;	
						КонецЕсли;
						
					КонецЕсли;  
					
				КонецЦикла;
				
			КонецЦикла;
		
		КонецЦикла;  
		
	КонецЦикла;   
	

	Если текМесяц = 1 Тогда
		ПредствлениеМесяца = "Январь";
	ИначеЕсли текМесяц = 2 Тогда
		ПредствлениеМесяца = "Февраль";
	ИначеЕсли текМесяц = 3 Тогда
		ПредствлениеМесяца = "Март";
	ИначеЕсли текМесяц = 4 Тогда
		ПредствлениеМесяца = "Апрель";
	ИначеЕсли текМесяц = 5 Тогда
		ПредствлениеМесяца = "Май";
	ИначеЕсли текМесяц = 6 Тогда
		ПредствлениеМесяца = "Июнь";
	ИначеЕсли текМесяц = 7 Тогда
		ПредствлениеМесяца = "Июль";
	ИначеЕсли текМесяц = 8 Тогда
		ПредствлениеМесяца = "Август";
	ИначеЕсли текМесяц = 9 Тогда
		ПредствлениеМесяца = "Сентябрь";
	ИначеЕсли текМесяц = 10 Тогда
		ПредствлениеМесяца = "Октябрь";
	ИначеЕсли текМесяц = 11 Тогда
		ПредствлениеМесяца = "Ноябрь";
	Иначе
		ПредствлениеМесяца = "Декабрь";
	КонецЕсли; 
		
	Возврат ПредствлениеМесяца + " " + Формат(Год(Дата),"ЧРГ=' '; ЧГ=0");
КонецФункции // ПредствлениеМесяца()

